    "vim.visualstar": true,
    "vim.easymotion": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.leader": "<space>",

    "vim.autoSwitchInputMethod.enable": true,
    "vim.autoSwitchInputMethod.defaultIM": "0",
    "vim.autoSwitchInputMethod.obtainIMCmd": "C:\\bin\\switch-im.exe",
    "vim.autoSwitchInputMethod.switchIMCmd": "C:\\bin\\switch-im.exe {im}"
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["d"],
            "after": ["\"", "_", "d"]
        },
        {
            "before": ["x"],
            "after": ["\"", "_", "x"]
        },
        {
            "before": ["s"],
            "after": ["\"", "_", "s"]
        },
        {
            "before": [
                "v"
            ],
            "after": [
                "V"
            ]
        },
        {
            "before": [
                "V"
            ],
            "after": [
                "v"
            ]
        }
      ],
    "vim.normalModeKeyBindings": [
        {
            "before": [":"],
            "commands": [
                "workbench.action.showCommands",
            ]
        },
        // easy mothion
        {
            "before": ["s"],
            "after" : ["<Leader>","<Leader>","2","s"]
        },
        {
            "before": ["H"],
            "after": ["^" ]
        },
        {
            "before": ["L"],
            "after": ["$" ]
        },
        {
            "before": ["leader", "w"],
            "commands": [
                "workbench.action.files.save",
            ]
        },
        {
            "before": ["leader", "o"],
            "commands": [
                "workbench.action.quickOpen",
            ]
        }
    ],
   "vim.visualModeKeyBindings": [
